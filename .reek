# These don't work when using modules as stateless namespaces
UtilityFunction:
    enabled: false
FeatureEnvy:
  enabled: false

# Doesn't work well with case statements
TooManyStatements:
  max_statements: 10

# Reek isn't good at detecting these, especially with state and blocks
DuplicateMethodCall:
  max_calls: 2

NestedIterators:
  max_allowed_nesting: 2
